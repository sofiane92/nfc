    </form>

    <div class='table-responsive'>
      <table class="table table table-striped">
      <thead class="thead-inverse">
        <tr>
          <th>date_entree</th>
          <th>date_sortie</th>
        </tr>
      </thead>
      <tbody>
      <% for( var i=0; i<pointages.length; i++){ %>
        <tr>
          <td> <%= pointages[i].date_entree %> </td>
          <td> <%= pointages[i].date_sorti %> </td>
        <tr>
      <% } %>
    </tbody>
      </table>
      </div>

<% include footer %>
