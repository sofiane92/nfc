<canvas id="places" height="90"></canvas>


<div class='table-responsive'>
  <table class="table table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th><%= donnees[1].Type %></th>
      <th>Nombre places</th>
      <th>Fréquentation </th>
    </tr>
  </thead>
  <tbody>
  <% for( var i=0; i<donnees.length; i++){ %>
    <tr>
      <td> <%= donnees[i].Nom %> </td>
      <td> <%= donnees[i].Place %> </td>
      <td> <%= donnees[i].Nombre %> </td>
    <tr>
  <% } %>
</tbody>
  </table>
  </div>

<script>
    var dataArray = [];
    var labelArray = [];
    <% for( var i=0; i<donnees.length; i++){ %>
      dataArray.push(<%= donnees[i].Nombre %>)
      labelArray.push("<%= donnees[i].Nom %>")
    <% } %>
    // line chart data
    var placeData = {
        labels : labelArray,
        datasets : [
        {
            fillColor : "rgba(172,194,132,0.4)",
            strokeColor : "#ACC26D",
            pointColor : "#fff",
            pointStrokeColor : "#9DB86D",
            backgroundColor: [
                "#FF6384",
                "#36A2EB",
                "#FFCE56"
            ],
            hoverBackgroundColor: [
                "#FF6384",
                "#36A2EB",
                "#FFCE56"
            ],
            data : dataArray,
        }
    ]
    }
    // get line chart canvas
    var places = document.getElementById('places').getContext('2d');
    // draw line chart
    //new Chart(places).Line(placeData);
    var myNewChart = new Chart(places , {
        type: "pie",
        data: placeData, 
    });
</script>


