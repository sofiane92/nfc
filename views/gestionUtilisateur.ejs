<% include header %>

<% if( typeof messageError !== 'undefined'){ %>
        <div class="alert alert-danger">
          <%= messageError %>
        </div>
<% } %> 
<% if (typeof messageSuccess !== 'undefined'){ %>
        <div class="alert alert-success">
          <%= messageSuccess %>
        </div>
<% } %>
<br/>
<div class='table-responsive'>
  <table class="table table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>Nom</th>
      <th>Prenom</th>
      <th>Mail</th>
      <th>Téléphone</th>
      <th>Role</th>
      <th>Service</th>
    </tr>
  </thead>
  <tbody>
  <% for( var i=0; i<utilisateurs.length; i++){ %>
    <tr>
      <td> <%= utilisateurs[i].nom %> </td>
      <td> <%= utilisateurs[i].prenom %> </td>
      <td> <%= utilisateurs[i].mail %> </td>
      <td> <%= utilisateurs[i].tel %> </td>
      <td> <%= utilisateurs[i].id_role.nom_role %> </td>
      <td> <%= utilisateurs[i].id_service.nom_service %> </td>
      <td> <a href='/user/update/<%= utilisateurs[i].id %>'> <button type="button" class="btn btn-default"> Modifier</button></a> </td>
      <td> <a href='/user/delete/<%= utilisateurs[i].id %>'> <button type="button" class="btn btn-danger"> Supprimer</button></a> </td>
      <td> <a href='/user/<%= utilisateurs[i].id %>/pointage'> <button type="button" class="btn btn-infos"> Pointages</button></a> </td>
    <tr>
  <% } %>
</tbody>
  </table>
  </div>

<% include footer %>
